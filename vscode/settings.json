{
    "workbench.colorTheme": "Dark (Molokai)",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "[ruby]": {
        "editor.tabSize": 2
    },
    "ruby.intellisense": "rubyLocate",
    "[elixir]": {
        "editor.formatOnSave": true
    },
    "elixirLS.dialyzerEnabled": false,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [{
            "before": ["leader", "leader"],
            "commands": ["workbench.action.quickOpen"]
            // "commands": ["workbench.action.keepEditor"]
        }, {
            "before": ["leader", "q"],
            "commands": ["workbench.action.closeActiveEditor"]
        }, {
            "before": ["leader", "l"],
            "commands": ["workbench.action.nextEditor"]
        }, {
            "before": ["leader", "h"],
            "commands": ["workbench.action.previousEditor"]
        }, {
            "before": ["leader", "L"],
            // "commands": ["workbench.action.focusNextGroup"]
            "commands": ["workbench.action.focusRightGroup"]
        }, {
            "before": ["leader", "H"],
            // "commands": ["workbench.action.focusPreviousGroup"]
            "commands": ["workbench.action.focusLeftGroup"]
        }, {
            "before": ["leader", "<C-l>"],
            "commands": ["workbench.action.moveEditorToNextGroup"]
        }, {
            "before": ["leader", "<C-h>"],
            "commands": ["workbench.action.moveEditorToPreviousGroup"]
        }
    ],
}

