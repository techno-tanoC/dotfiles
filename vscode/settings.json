{
    "workbench.colorTheme": "Dark (Molokai)",
    "workbench.iconTheme": "material-icon-theme",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "[ruby]": {
        "editor.tabSize": 2
    },
    "ruby.intellisense": "rubyLocate",
    "[elixir]": {
        "editor.formatOnSave": false
    },
    "elixirLS.dialyzerEnabled": false,
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[rust]": {
        "editor.tabSize": 4
    },
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [{
            "before": ["leader", "leader"],
            "commands": ["workbench.action.quickOpen"]
            // "commands": ["workbench.action.keepEditor"]
        }, {
            "before": ["leader", "q"],
            "commands": ["workbench.action.closeActiveEditor"]
        }, {
            "before": ["leader", "l"],
            "commands": ["workbench.action.nextEditor"]
        }, {
            "before": ["leader", "h"],
            "commands": ["workbench.action.previousEditor"]
        }, {
            "before": ["leader", "L"],
            // "commands": ["workbench.action.focusNextGroup"]
            "commands": ["workbench.action.focusRightGroup"]
        }, {
            "before": ["leader", "H"],
            // "commands": ["workbench.action.focusPreviousGroup"]
            "commands": ["workbench.action.focusLeftGroup"]
        }, {
            "before": ["leader", "<C-l>"],
            "commands": ["workbench.action.moveEditorToNextGroup"]
        }, {
            "before": ["leader", "<C-h>"],
            "commands": ["workbench.action.moveEditorToPreviousGroup"]
        }, {
            "before": ["<C-e>"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        }, {
            "before": ["<C-n>"],
            "commands": ["workbench.action.files.newUntitledFile"]
        }
    ],
    "explorer.confirmDragAndDrop": false,
    "editor.bracketPairColorization.enabled": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "dotfiles.repository": "https://github.com/techno-tanoC/dotfiles.git",
    "dotfiles.installCommand": "~/dotfiles/remote_container/install.sh",
}
